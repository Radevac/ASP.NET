@model IEnumerable<MyFirstWebServer.Models.Entities.CategoryModel>

<h1>Categories</h1>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Name</td>
            <td>@category.Description</td>
            <td>
                <a href="/Category/Edit/@category.Id" class="btn btn-primary">Edit</a> |
                <a href="/Category/Delete/@category.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a href="/Category/Create" class="btn btn-success">Create New Category</a>