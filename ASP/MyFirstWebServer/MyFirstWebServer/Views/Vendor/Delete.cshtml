@model MyFirstWebServer.Models.Entities.VendorModel

<h1>Delete Vendor</h1>

<h3>Are you sure you want to delete this vendor?</h3>

<div>
    <h4>@Model.Name</h4>
    <p>@Model.ContactInfo</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a href="/Vendor/Index" class="btn btn-secondary">Cancel</a>
</form>