@model MyFirstWebServer.Models.Entities.MyContact

<h2>Деталі контакту</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Ім'я</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Номер телефону</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>
        
    </dl>
</div>

<a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">Редагувати</a>
<a href="@Url.Action("Index")" class="btn btn-secondary">Назад до списку</a>