@model IEnumerable<Dolly.Models.Dolly.DollModel>

<h1>Ляльки</h1>
<p>
    <a asp-action="Create" asp-controller="Doll">Додати нову ляльку</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>Назва</th>
        <th>Дії</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var doll in Model)
    {
        <tr>
            <td>@doll.Name</td>
            <td>
                <a asp-action="Details" asp-route-id="@doll.Id">Переглянути</a> |
                <a asp-action="Edit" asp-route-id="@doll.Id">Редагувати</a> |
                <a asp-action="Delete" asp-route-id="@doll.Id">Видалити</a>
            </td>
        </tr>
    }
    </tbody>
</table>